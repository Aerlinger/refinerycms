<div id='page-tabs' class='clearfix refinery-ui-tabs refinery-ui-widget refinery-ui-widget-content refinery-ui-corner-all'>
  <ul id='page_parts'>
    <% fields.each_with_index do |part, part_index| %>
      <li class='refinery-ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
        <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/#{object}", :default => part.to_s.titleize), "##{part}" %>
      </li>
    <% end %>
  </ul>
  <div id='page_part_editors'>
    <% fields.each do |part| %>
      <div class='page_part' id='<%= part %>'>
        <%= f.text_area part, :rows => 20, :class => 'visual_editor widest' -%>
      </div>
    <% end %>
  </div>
</div>
